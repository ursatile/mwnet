@model Rockaway.WebApp.Models.ShowViewData

<h1>@Model.HeadlineArtistName</h1>
<p>@Model.VenueName, @Model.VenueAddress</p>
<p>@Model.ShowDate</p>
<form class="ticket-selector" method="post">
	<section class="row">
		<div class="col-4 offset-2">
			<strong>Ticket Type</strong>
		</div>
		<div class="col-2">
			<strong>Price</strong>
		</div>
		<div class="col-2 text-end">
			<strong>Quantity</strong>
		</div>
	</section>
	<section class="row">
		@foreach (var tt in Model.TicketTypes) {
			<div class="col-4 offset-2">@tt.Name</div>
			<div class="col-2">@tt.FormattedPrice</div>
			<div class="col-2 text-end">
				<input type="number" name="tickets[@tt.Id]" value="0" min="0" max="10" />
			</div>
		}
	</section>
	<section class="row">
		<div class="col-8 offset-2 text-end">
			<input type="submit" value="Next &gt;"/>
		</div>
	</section>
</form>